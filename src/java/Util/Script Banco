CREATE TABLE LULU.PRODUTO (
    CODIGO_PRODUTO INTEGER NOT NULL PRIMARY KEY GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
    SCRIMAGE VARCHAR(200) NOT NULL,
    NOME VARCHAR(200) NOT NULL,
    PRECO VARCHAR(200) NOT NULL,
    DESCRICAO VARCHAR(200) NOT NULL,
    INFORMACAOTECNICA VARCHAR(200) NOT NULL
);

CREATE TABLE LULU.COMPRADOR (
    ID_COMPRADOR INTEGER NOT NULL PRIMARY KEY GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
    NOME VARCHAR(200) NOT NULL,
    EMAIL VARCHAR(200) NOT NULL,
    SENHA VARCHAR(200) NOT NULL,
    NOME_END VARCHAR(200) NOT NULL,
    NUMERO VARCHAR(200) NOT NULL,
    COMPLEMENTO VARCHAR(200),
    CEP VARCHAR(200) NOT NULL
);

